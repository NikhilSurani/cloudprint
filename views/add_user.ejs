<%- include layouts/header.ejs %>

    <div class="row">

            <form method="post" action='/users/<%= typeof data != "undefined" ? "edit/"+data[0].id : "add" %>'>
        
            <table cellpadding="11">
            <tr>
                <td class="label">Name</td><td>: <input type="text" name="name" value='<%= typeof data != "undefined" ? data[0].name : '' %>'  ></td>
            </tr>            
            <tr>
                <td class="label" valign="top">Address</td><td valign="top">: <textarea name="address"   cols="30" rows="5"><%= typeof data != "undefined"  ? data[0].address : '' %></textarea></td>
            </tr>
            <tr>
                <td class="label">Email</td><td>: <input type="text" name="email" value='<%= typeof data!= "undefined" ? data[0].email : '' %>'  ></td>
            </tr>
            <tr>
                <td class="label">Phone</td><td>: <input type="text" name="phone" value='<%= typeof data != "undefined" ? data[0].phone : '' %>'  ></td>
            </tr>
            <tr>
                <td class="label"></td>
                <td>
                    &nbsp; <input type="submit" name="submit" value="Save">
                <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                </td>
            </tr>
            </table>
        </form>
        
    </div>


<%- include layouts/footer.ejs %>