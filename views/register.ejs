<%- include layouts/header.ejs %>

    <div class="row">

        <form method="post" action='/controllers/register-controller' enctype="multipart/form-data">

            <table cellpadding="11">
                <tr>
                    <td class="label">First Name</td>
                    <td>:
                        <input type="text" name="fname" required>
                    </td>
                </tr>
                <tr>
                    <td class="label">Last Name</td>
                    <td>:
                        <input type="text" name="lname" required>
                    </td>
                </tr>
                <tr>
                    <td class="label">Email</td>
                    <td>:
                        <input type="text" name="email" required>
                    </td>
                </tr>
                <tr>
                    <td class="label">Password</td>
                    <td>:
                        <input type="password" name="password" required>
                    </td>
                </tr>
                <tr>
                    <td class="label">Profile</td>
                    <td>:
                        <input type="file" name="uploaded_image" required>
                    </td>
                </tr>
                <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp;
                        <input type="submit" name="submit" value="Save">
                        <input type="button" name="cancel" value="Cancel" class="cancel" onClick="loginPage()">
                    </td>
                </tr>
            </table>
        </form>

    </div>


    <%- include layouts/footer.ejs %>